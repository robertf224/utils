{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**", "tsconfig.json"],
            "outputs": ["lib/**"]
        },
        "lint": {
            "dependsOn": ["build"],
            "inputs": ["src/**", "eslint.config.mjs"]
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*.test.{ts,tsx}", "vitest.config.mjs"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "//#lint-versions": {
            "inputs": ["**/package.json"]
        }
    }
}
